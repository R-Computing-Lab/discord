Package: discord
Type: Package
Title: Functions for Discordant Kinship Modeling
Version: 1.3
Authors@R: c(person("S. Mason", "Garrison", email = "garrissm@wfu.edu",
                  role = c("aut", "cre", "cph"),
           comment = c(ORCID = "0000-0002-4804-6003")),
